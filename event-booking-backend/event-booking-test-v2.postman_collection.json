        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"962790000001\",\n  \"name\": \"Test Client\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/send-otp",
          "protocol": "http",
