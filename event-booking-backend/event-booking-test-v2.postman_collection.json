        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Farm\",\n  \"category\": \"farm\",\n  \"price\": 1000,\n  \"location\": {\n    \"city\": \"Amman\",\n    \"area\": \"Abdoun\"\n  }\n}"
